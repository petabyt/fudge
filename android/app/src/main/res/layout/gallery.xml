<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/gallery_main_view"
    tools:context=".Gallery">

    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gallerymenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--            <ImageButton-->
            <!--                style="@style/GreyButton"-->
            <!--                android:layout_width="50dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:src="@drawable/baseline_terminal_24" />-->

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/import_button"
                style="@style/GreyButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_download_24" />

            <ImageButton
                android:id="@+id/table_button"
                style="@style/GreyButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_view_list_24" />

            <ImageButton
                android:id="@+id/gallery_button"
                style="@style/GreyButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_grid_view_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fileView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/gallery_logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8404040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>